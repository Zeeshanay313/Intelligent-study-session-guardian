# Database Configuration
MONGODB_URI=mongodb://localhost:27017/study-guardian

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-here-change-this-in-production

# Server Configuration
NODE_ENV=development
PORT=5004
FRONTEND_URL=http://localhost:3000

# Google Calendar OAuth2 (Optional - for calendar integration)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5004/api/calendar/callback

# Email Configuration (Optional - for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Study Guardian <noreply@study-guardian.com>

# Firebase Push Notifications (Optional - for browser push notifications)
FIREBASE_PROJECT_ID=study-guardian
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"study-guardian","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token"}

# Rate Limiting (Production)
RATE_LIMIT_MAX=100

# Data Retention (Days)
USER_RETENTION_DAYS=30
{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-console": "off",
    "consistent-return": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id", "_doc"] }],
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "comma-dangle": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}
